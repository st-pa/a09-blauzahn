<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvBTSightingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:text="TextView"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btBTSightingSessions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btBTSightingSessions" />

    <Button
        android:id="@+id/btBTSightingSightings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btBTSightingSightings" />

    <Button
        android:id="@+id/btBTSightingExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btBTSightingExit" />

</LinearLayout>
